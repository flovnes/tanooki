<div class="min-h-screen">
  <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url(<%= asset_path('psyduck_background.webp') %>);"></div>
  <div class="absolute inset-0 bg-gradient-to-br from-stone-100 to-stone-200 dark:from-gray-800 dark:to-gray-900 opacity-95"></div>

  <div class="max-w-6xl mx-auto px-4 pb-8 z-10 relative">
    <div class="relative overflow-hidden mt-8 mb-4 rounded-xl shadow-xl border border-cyan-700 dark:border-rose-700">
      <%= render 'shared/ornament' %>

      <!-- Content -->
      <div class="relative z-10 flex flex-row items-center justify-between">
        <div class="text-center sm:text-left mb-8 sm:mb-0 w-full pt-8 px-4 sm:py-12 sm:px-12">
          <h1 class="text-xl sm:text-4xl lg:text-6xl font-black text-stone-900 dark:text-gray-100 tracking-tight leading-none mb-4">
            Світ Ранобе<br>
            <span class="text-cyan-700 dark:text-rose-700">Українською</span>
          </h1>
          <p class="text-stone-800 dark:text-gray-200 text-xs sm:text-lg lg:text-2xl font-light">
            Відкрийте нові горизонти літератури!
          </p>
          <div class="mt-4 md:mt-8 gap-2 flex flex-row items-center justify-center sm:justify-start">
            <%= link_to calendar_fictions_path, class: 'shadow-sm ring-1 ring-cyan-800 dark:ring-rose-800 inline-flex items-center gap-1 text-xs sm:text-sm bg-cyan-700 dark:bg-rose-700 text-white dark:text-gray-100 font-bold py-2 px-2 sm:py-3 sm:px-6 rounded-xl hover:bg-cyan-800 dark:hover:bg-rose-800 transition duration-300' do %>
              <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 10h16m-8-3V4M7 7V4m10 3V4M5 20h14a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1Zm3-7h.01v.01H8V13Zm4 0h.01v.01H12V13Zm4 0h.01v.01H16V13Zm-8 4h.01v.01H8V17Zm4 0h.01v.01H12V17Zm4 0h.01v.01H16V17Z" />
              </svg>
              Календар
            <% end %>
            <%= link_to alphabetical_fictions_path, class: 'shadow-sm ring-1 ring-cyan-800 dark:ring-rose-800 inline-flex items-center gap-1 text-xs sm:text-sm bg-cyan-700 dark:bg-rose-700 text-white dark:text-gray-100 font-bold py-2 px-2 sm:py-3 sm:px-6 rounded-xl hover:bg-cyan-800 dark:hover:bg-rose-800 transition duration-300' do %>
              <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 12c.263 0 .524-.06.767-.175a2 2 0 0 0 .65-.491c.186-.21.333-.46.433-.734.1-.274.15-.568.15-.864a2.4 2.4 0 0 0 .586 1.591c.375.422.884.659 1.414.659.53 0 1.04-.237 1.414-.659A2.4 2.4 0 0 0 12 9.736a2.4 2.4 0 0 0 .586 1.591c.375.422.884.659 1.414.659.53 0 1.04-.237 1.414-.659A2.4 2.4 0 0 0 16 9.736c0 .295.052.588.152.861s.248.521.434.73a2 2 0 0 0 .649.488 1.809 1.809 0 0 0 1.53 0 2.03 2.03 0 0 0 .65-.488c.185-.209.332-.457.433-.73.1-.273.152-.566.152-.861 0-.974-1.108-3.85-1.618-5.121A.983.983 0 0 0 17.466 4H6.456a.986.986 0 0 0-.93.645C5.045 5.962 4 8.905 4 9.736c.023.59.241 1.148.611 1.567.37.418.865.667 1.389.697Zm0 0c.328 0 .651-.091.94-.266A2.1 2.1 0 0 0 7.66 11h.681a2.1 2.1 0 0 0 .718.734c.29.175.613.266.942.266.328 0 .651-.091.94-.266.29-.174.537-.427.719-.734h.681a2.1 2.1 0 0 0 .719.734c.289.175.612.266.94.266.329 0 .652-.091.942-.266.29-.174.536-.427.718-.734h.681c.183.307.43.56.719.734.29.174.613.266.941.266a1.819 1.819 0 0 0 1.06-.351M6 12a1.766 1.766 0 0 1-1.163-.476M5 12v7a1 1 0 0 0 1 1h2v-5h3v5h7a1 1 0 0 0 1-1v-7m-5 3v2h2v-2h-2Z" />
              </svg>
              Сховище
            <% end %>
          </div>
        </div>
        <div class="max-h-96">
          <%= image_tag 'reader.webp', alt: 'reader', class: 'max-h-96 object-cover', height: 384, width: 384, loading: 'eager'  %>
        </div>
      </div>
    </div>

    <!-- First Section: Rising and Cheering Fictions -->
    <div class="flex flex-col lg:flex-row mb-8 mt-8 lg:mt-12">
      <!-- Rising Fictions -->
      <div class="w-full lg:w-2/4 lg:pr-4 mb-8 lg:mb-0">
        <%= render 'hot_updates', fictions: @index_presenter.latest_updates %>
      </div>

      <!-- Cheering Fictions -->
      <div class="w-full lg:w-2/4">
        <%= render 'new_releases', fictions: @index_presenter.popular_novelty %>
      </div>
    </div>

    <!-- Mid-page Banner -->
    <div class="w-full mx-auto mb-8 lg:mb-12">
      <%= render 'shared/ads', advertisement: @index_presenter.hero_ad %>
    </div>

    <!-- Second Section: Rankings and Filtered Fictions -->
    <div class="flex flex-col lg:flex-row">
      <!-- Rankings -->
      <div class="w-full lg:w-1/3 lg:pr-4 mb-8 lg:mb-0">
        <%= render 'top_fictions', fictions: @index_presenter.most_reads.limit(7) %>
      </div>

      <!-- Filtered Fictions -->
      <div class="w-full lg:w-2/3">
        <%= render 'filtered_fiction_list', fictions: @index_presenter.other, genres: @index_presenter.genres, sample_genre: @index_presenter.sample_genre %>
      </div>
    </div>
  </div>
</div>
