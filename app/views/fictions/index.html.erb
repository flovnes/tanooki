<div class="bg-stone-100 min-h-screen">
  <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url(<%= asset_path('psyduck_background.webp') %>);"></div>
  <div class="absolute inset-0 bg-stone-50 dark:bg-stone-900 bg-opacity-95"></div>

  <div class="max-w-5xl mx-auto px-4 pb-8 z-10 relative">
    <div class="p-4 sm:p-8 mt-8 mb-4">
      <div class="flex flex-row items-center justify-between">
        <div class="text-center sm:text-left mb-8 sm:mb-0 w-full">
          <h1 class="text-3xl sm:text-4xl lg:text-6xl font-black text-stone-800 tracking-tight leading-none mb-4">
            Світ Ранобе<br><span class="text-stone-600">Українською</span>
          </h1>
          <p class="text-stone-700 text-lg sm:text-xl lg:text-2xl font-light">Відкрийте нові горизонти літератури!</p>
          <div class="mt-4 md:mt-8">
            <%= link_to 'Календар Оновлень', calendar_fictions_path, class: 'inline-block bg-stone-800 text-stone-100 font-bold py-3 px-6 rounded-xl hover:bg-stone-700 transition duration-300' %>
          </div>
        </div>
        <div class="max-h-96">
          <%= image_tag 'reader.webp', alt: 'reader', class: 'max-h-96 object-cover', height: 384, width: 384, loading: 'eager'  %>
        </div>
      </div>
    </div>

    <!-- First Section: Rising and Cheering Fictions -->
    <div class="flex flex-col lg:flex-row mb-8 lg:mb-12">
      <!-- Rising Fictions -->
      <div class="w-full lg:w-3/5 lg:pr-4 mb-8 lg:mb-0">
        <%= render 'hot_updates', fictions: @index_presenter.latest_updates %>
      </div>

      <!-- Cheering Fictions -->
      <div class="w-full lg:w-2/5">
        <%= render 'new_releases', fictions: @index_presenter.popular_novelty %>
      </div>
    </div>

    <!-- Mid-page Banner -->
    <div class="w-full lg:w-[95%] mx-auto mb-8 lg:mb-12">
      <%= render 'shared/ads', advertisement: @index_presenter.hero_ad %>
    </div>

    <!-- Second Section: Rankings and Filtered Fictions -->
    <div class="flex flex-col lg:flex-row">
      <!-- Rankings -->
      <div class="w-full lg:w-1/3 lg:pr-4 mb-8 lg:mb-0">
        <%= render 'top_fictions', fictions: @index_presenter.most_reads.limit(7) %>
      </div>

      <!-- Filtered Fictions -->
      <div class="w-full lg:w-2/3">
        <%= render 'filtered_fiction_list', fictions: @index_presenter.other, genres: @index_presenter.genres, sample_genre: @index_presenter.sample_genre %>
      </div>
    </div>
  </div>
</div>
