<div class="text-gray-500 sm:text-lg col-span-5 md:col-span-3 overflow-y-auto max-h-[40rem]">
  <%= tag.h2 @fiction.title, class: 'text-center mb-4 text-2xl tracking-tight font-extrabold text-gray-900 md:text-3xl' %>

  <% if @fiction.genres.any? %>
    <div class="mb-4 overflow-hidden break-words text-center">
      <% @fiction.genres.each do |genre| %>
        <%= tag.p "##{genre.name}", class: 'inline-block tracking-widest leading-4 text-xs md:text-sm font-semibold mr-2 whitespace-nowrap uppercase text-emerald-600' %>
      <% end %>
    </div>
  <% end %>

  <%= tag.p @fiction.description, class: 'mb-4 font-light text-sm lg:text-lg whitespace-break-spaces' %>
  <div class="grid gap-2 grid-cols-2 sm:grid-cols-3 md:grid-cols-2">
    <div class="flex">
      <div class="mr-1 sm:mr-2 md:mr-4 shrink-0">
        <%= image_tag 'author.svg', class: 'h-14 inline-block', alt: 'author' %>
      </div>
      <div class="mt-2 md:mt-1">
        <%= tag.p @fiction.author, class: 'text-xs md:text-lg xl:text-xl font-extrabold tracking-tight text-gray-900' %>
        <p class="font-light text-xs md:text-base text-gray-500">Автор</p>
      </div>
    </div>
    <%= tag.div class: 'flex' do %>
      <div class="mr-1 sm:mr-2 md:mr-4 shrink-0">
        <%= image_tag 'translator.svg', class: 'h-14 inline-block', alt: 'translator' %>
      </div>
      <div class="mt-2 md:mt-1">
        <%= tag.p @fiction.translator, class: 'text-xs md:text-lg xl:text-xl font-extrabold tracking-tight text-gray-900' %>
        <p class="font-light text-xs md:text-base text-gray-500">Перекладач</p>
      </div>
    <% end if @fiction.translator.present? %>
    <div class="flex md:col-span-2">
      <div class="mr-1 sm:mr-2 md:mr-4 shrink-0">
        <%= image_tag 'status.svg', class: 'h-14 inline-block', alt: 'author' %>
      </div>
      <div class="mt-2 md:mt-1">
        <%= tag.p Fiction.statuses[@fiction.status], class: 'text-xs md:text-lg xl:text-xl font-extrabold tracking-tight text-gray-900' %>
        <p class="font-light text-xs md:text-base text-gray-500">Статус перекладу</p>
      </div>
    </div>
    <%= tag.div class: 'flex' do %>
      <div class="mr-1 sm:mr-2 md:mr-4 shrink-0">
        <%= image_tag 'chapter.svg', class: 'h-14 inline-block', alt: 'author' %>
      </div>
      <div class="mt-2 md:mt-1">
        <%= tag.p @fiction.total_chapters.zero? ? @fiction.chapters.size : "#{unique_chapters(@fiction.chapters).size} / #{@fiction.total_chapters}", class: 'text-xs md:text-lg xl:text-xl font-extrabold tracking-tight text-gray-900' %>
        <p class="font-light text-xs md:text-base text-gray-500">Кількість розділів</p>
      </div>
    <% end %>
    <div class="flex">
      <div class="mr-1 sm:mr-2 md:mr-4 shrink-0">
        <%= image_tag 'views.svg', class: 'h-14 inline-block', alt: 'author' %>
      </div>
      <div class="mt-2 md:mt-1">
        <%= tag.p @fiction.views, class: 'mb-1 text-xs md:text-lg xl:text-xl font-extrabold tracking-tight text-gray-900' %>
        <p class="font-light text-xs md:text-base text-gray-500">Кількість переглядів</p>
      </div>
    </div>
    <%= tag.div class: 'flex md:col-span-2' do %>
      <div class="mr-1 sm:mr-2 md:mr-4 shrink-0">
        <%= image_tag 'calendar.svg', class: 'h-14 inline-block', alt: 'author' %>
      </div>
      <div class="mt-2 md:mt-1">
        <%= tag.p "#{time_ago_in_words(@fiction.chapters.order(created_at: :desc).first.created_at) } тому", class: 'mb-1 text-xs md:text-lg xl:text-xl font-extrabold tracking-tight text-gray-900' %>
        <p class="font-light text-xs md:text-base text-gray-500">Оновлено востаннє</p>
      </div>
    <% end if @fiction.chapters.any? %>
  </div>
</div>