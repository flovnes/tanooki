<% placeholder = true %>

<div class="mt-2">
  <%= render 'shared/divider', caption: 'Варте уваги', rose: false %>
  <div class="mx-auto w-full grid grid-cols-6 gap-4">
    <% @other.in_groups_of(6).each do |group| %>
      <% group.each_with_index do |fiction, index| %>
        <% if fiction.present? %>
          <%= render 'other_updates', fiction: fiction, large: true %>
        <% elsif placeholder %>
          <% placeholder = false %>
          <%= render 'placeholder', size: (6 - index) %>
        <% else %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
