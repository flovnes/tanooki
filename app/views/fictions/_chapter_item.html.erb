<li class="">
  <div class="flex items-center space-x-4 p-3">
    <div class="flex-1 min-w-0">
      <%= tag.span class: "items-center text-green-800 font-medium font-medium truncate" do %>
        <%= tag.div class: "flex items-center" do %>
          <%= image_tag 'new.webp', class: 'h-4 w-auto inline-block mr-2 transform transition duration-500 hover:scale-110', alt: 'new badge', height: '16', width: '16' if color == :green %>
          <%= link_to chapter_path(chapter), data: { turbo: false } do %>
            <%= tag.p chapter.display_title_no_volume, class: "text-sm lg:text-base font-medium truncate text-gray-900 hover:underline" %>
          <% end %>
        <% end %>
      <% end %>
      <%= tag.p l(chapter.created_at, format: :short).downcase, class: "text-xs lg:text-sm truncate font-normal text-gray-500" %>
    </div>
  </div>
</li>
