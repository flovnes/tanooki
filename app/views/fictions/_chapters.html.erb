<div class="text-gray-500 sm:text-lg col-span-3 self-start">
  <div class="text-center">
    <h2 class="text-lg font-extrabold leading-tight tracking-tight text-gray-900 sm:text-xl">Перелік розділів</h2>
  </div>
  <div class="mt-4 text-center">
    <%= link_to chapter_path(@fiction.chapters.order(:number).first), class: 'inline-flex font-oswald text-emerald-800 text-lg hover:text-emerald-600 focus:outline-none transition duration-500 transform hover:scale-110 hover:border-emerald-700 hover:border-b-4 border-b-4 border-gray-50' do %>
      Читати з початку
      <svg aria-hidden="true" class="w-5 h-5 ml-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="green">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    <% end if @fiction.chapters.any? %>
  </div>
  <div class="lg:max-w-3xl p-5 mx-auto my-4 space-y-5 border border-gray-100 rounded-lg bg-gray-50 overflow-y-auto max-h-[55rem]">
    <ul class="divide-y divide-gray-200">
      <% @fiction.chapters.order(number: :desc, created_at: :desc).each_with_index do |chapter, index| %>
        <li class="pb-3 sm:pb-4">
          <div class="flex items-center space-x-4">
            <div class="flex-1 min-w-0">
              <%= link_to chapter_path(chapter) do %>
                <%= tag.p chapter.display_title, class: 'text-sm font-medium text-gray-900 truncate mt-2 hover:text-gray-600' %>
              <% end %>
              <%= tag.p "#{time_ago_in_words(chapter.created_at)} тому", class: 'text-sm text-gray-500 truncate' %>
            </div>
            <div class="inline-flex items-center text-base font-semibold text-gray-900">
              <span class="text-gray-500 ml-3 text-xs mt-1 flex align-center">
                <%= image_tag 'comment.svg', class: 'h-4 inline-block', alt: 'comments', height: '16', width: '16' %>
                <%= tag.span chapter.comments_count, class: 'ml-1 inline-block' %>
              </span>
              <span class="text-gray-500 ml-3 text-xs mt-1 flex align-center">
                <%= image_tag 'eye.svg', class: 'h-4 inline-block', alt: 'views', height: '16', width: '16'  %>
                <%= tag.span chapter.views, class: 'ml-1 inline-block' %>
              </span>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  <%= render 'add_chapter_cta', fiction: @fiction %>
</div>