<section class="relative min-h-screen flex items-center justify-center py-10 px-4">
  <div class="w-full max-w-7xl bg-white/90 dark:bg-gray-950/90 rounded-2xl shadow-2xl flex flex-col md:flex-row overflow-hidden border border-gray-200 dark:border-gray-700">
    <!-- Left: Welcome and Form -->
    <div class="flex-1 flex flex-col justify-center p-10 md:p-14">
      <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900 dark:text-gray-100 mb-2 tracking-tight leading-tight">
        Вітаємо з поверненням!
      </h1>
      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 font-light mb-6">
        Досі не з нами?
        <%#= link_to 'Sign up', register_path, class: 'font-semibold text-emerald-700 dark:text-emerald-400 hover:underline transition' %>
      </p>

      <% if alert = flash[:alert] %>
        <div class="mb-4 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg">
          <p class="text-red-700 dark:text-red-400 font-medium" id="alert"><%= alert %></p>
        </div>
      <% end %>

      <% if notice = flash[:notice] %>
        <div class="mb-4 p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
          <p class="text-green-700 dark:text-green-400 font-medium" id="notice"><%= notice %></p>
        </div>
      <% end %>

      <div class="bg-emerald-50 dark:bg-gray-900/70 rounded-xl shadow-inner p-6 md:p-8 mb-4 border border-gray-200 dark:border-gray-700">
        <!-- Google OAuth Button -->
        <div class="mb-6">
          <%= button_to '/auth/google_oauth2', method: :post, class: "w-full flex items-center justify-center py-3 px-4 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm bg-white dark:bg-gray-950 text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-900 transition" do %>
            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Увійти за допомогою Google
          <% end %>
        </div>

        <div class="relative mb-6">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300 dark:border-gray-600"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-emerald-50 dark:bg-gray-900/70 text-gray-500 dark:text-gray-400">або з електронною поштою</span>
          </div>
        </div>

        <%= form_with url: session_url, class: "contents" do |form| %>
          <div class="grid grid-cols-1 gap-5">
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                Адреса електронної пошти
              </label>
              <%= form.email_field :email,
                required: true,
                autofocus: true,
                autocomplete: "username",
                placeholder: "Введіть адресу електронної пошти",
                value: params[:email],
                class: "w-full py-3 px-4 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-950 text-base text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-emerald-400 transition" %>
            </div>

            <div>
              <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                Пароль
              </label>
              <%= form.password_field :password,
                required: true,
                autocomplete: "current-password",
                placeholder: "Введіть пароль",
                maxlength: 72,
                class: "w-full py-3 px-4 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-950 text-base text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-emerald-400 transition" %>
            </div>
          </div>

          <div class="flex items-center justify-between mt-4">
            <%#= link_to "Забули пароль?", new_password_path, class: "text-sm font-medium text-emerald-700 dark:text-emerald-400 hover:underline transition" %>
          </div>

          <%= form.submit "Увійти", class: "mt-6 w-full py-3 rounded-lg bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white font-bold text-lg tracking-wide shadow-lg transition uppercase" %>
        <% end %>
      </div>
    </div>

    <!-- Right: Visual -->
    <div class="hidden md:flex flex-1 items-center justify-center bg-gradient-to-tr from-emerald-100 via-white to-emerald-50 dark:from-gray-950 dark:via-gray-900 dark:to-gray-950">
      <%= image_tag 'login.jpeg', alt: 'login', class: 'w-80 h-80 object-cover rounded-xl shadow-lg border-4 border-emerald-100 dark:border-gray-800' %>
    </div>
  </div>
</section>
