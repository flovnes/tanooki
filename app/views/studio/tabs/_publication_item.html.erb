<li class="py-4">
  <div class="flex items-center space-x-4">
    <!-- Publication Details -->
    <div class="flex-grow min-w-0">
      <h4 class="text-base font-semibold text-stone-900 truncate">
        <%= publication.title %>
      </h4>
      <div class="flex items-center space-x-3 mt-2 text-sm text-stone-600">
        <time datetime="<%= publication.created_at.iso8601 %>">
          <%= l(publication.created_at, format: :short).downcase %>
        </time>
        <span>Перегляди: <%= publication.views %></span>
        <span>Коментарі: <%= publication.comments_count %></span>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex space-x-2 items-center">
      <!-- View Button -->
      <%= link_to tale_path(publication.slug),
                  data: { turbo: false },
                  title: "Переглянути",
                  class: "group p-2 rounded-lg hover:bg-stone-100 transition-all" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
             class="h-5 w-5 text-stone-600 group-hover:text-stone-800 transition-transform transform group-hover:scale-110 duration-200">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12s3.75-7.5 9.75-7.5 9.75 7.5 9.75 7.5-3.75 7.5-9.75 7.5S2.25 12 2.25 12z" />
          <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="1.5" fill="none"/>
        </svg>
      <% end %>

      <!-- Edit Button -->
      <%= link_to edit_publication_path(publication.slug),
                  data: { turbo: false },
                  class: "group flex items-center justify-center w-9 h-9 rounded-xl bg-stone-100 hover:bg-stone-200 transition-all" do %>
        <svg class="w-5 h-5 text-stone-700 group-hover:text-stone-900 transition-all" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16.5 4.5L19.5 7.5M4 20h4l10-10-4-4L4 16v4z" />
        </svg>
      <% end %>

      <!-- Delete Button -->
      <%= sweetalert(delete_icon, {
        description: I18n.t('sweetalert.fictions.description'),
        message: I18n.t('sweetalert.fictions.message'),
        tag_id: nil,
        url: publication_path(publication, page: params[:page])
      }) %>
    </div>
  </div>
</li> 