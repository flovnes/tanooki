<li role="presentation">
  <%= link_to(
    tab_studio_path(item[:id]),
    data: { turbo_frame: "tab-content", turbo_stream: true },
    class: "inline-flex w-full items-center justify-center rounded-lg py-3 transition-colors duration-200 #{is_active ? active_classes : inactive_classes}",
    id: "#{item[:id]}-tab",
    role: "tab",
    aria: { controls: item[:id], selected: is_active }
  ) do %>
    <svg class="me-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" d="<%= item[:icon] %>" />
    </svg>
    <%= item[:label] %>
  <% end %>
</li> 