<div class="mt-8 lg:mt-12 max-w-6xl mx-auto px-4 pb-8 z-10 relative tracking-tight">
  <% if @history.any? %>
    <div class="mb-12">
      <%= render 'no_history_screen' %>
    </div>

    <div class="flex flex-col lg:flex-row">
      <!-- Rising Fictions -->
      <div class="w-full lg:w-3/4 lg:pr-8 mb-8 lg:mb-0">
        <div class="mb-8">
          <%= turbo_frame_tag 'library-list' do %>
            <%= render "list", paginated_readings: @paginated_readings, pagy: @pagy, section: @section %>
          <% end %>
        </div>
      </div>

      <!-- Cheering Fictions -->
      <div class="w-full lg:w-1/4">
        <% if @related_fictions.any? %>
          <div class="mb-4">
            <div class="flex flex-row justify-between items-start lg:items-center mb-2">
              <h2 class="text-xl font-semibold text-stone-800 dark:text-gray-100 mb-2 lg:mb-0">Також Може Сподобатися</h2>
            </div>
            <div class="border border-cyan-700 dark:border-rose-700"></div>
          </div>

          <ul class="space-y-3">
            <% @related_fictions.each do |fiction| %>
              <li class="flex items-center gap-3 border-b border-cyan-700 dark:border-rose-700 last:border-b-0 pb-3 p-2 hover:scale-[1.015] transition-all duration-300">
                <%= link_to fiction_path(fiction), data: { turbo: false }, class: '' do %>
                  <%= image_tag url_for(fiction.cover),
                    alt: fiction.cover.blob.filename.to_s,
                    class: "w-16 h-22 rounded object-cover shadow-sm border border-cyan-700 dark:border-rose-700",
                    loading: "lazy",
                    data: {
                      controller: "lazy-image",
                      lazy_image_target: "image",
                      lazy_image_url_value: url_for(fiction.cover)
                    } %>
                <% end %>
                <div class="flex-1 tracking-tight">
                  <%= link_to fiction.title, fiction_path(fiction), data: { turbo: false }, class: 'md:leading-tight text-xs md:text-base font-semibold text-stone-900 dark:text-gray-100 line-clamp-2 hover:text-cyan-700 dark:hover:text-rose-700 transition-colors duration-300 tracking-tight' %>
                  <div class="text-xs text-gray-400 font-light tracking-tight line-clamp-1 mt-1"><%= fiction.author %></div>
                </div>
              </li>
            <% end %>
          </ul>
        <% end %>
        <section class="mt-4">
          <h2 class="text-xl font-bold text-stone-800 dark:text-gray-200 mb-4">Улюблені Перекладачі</h2>
          <div class="border border-cyan-700 dark:border-rose-700"></div>
          <div class="grid grid-cols-2 gap-2">
            <% @favourite_translators.each do |translator| %>
              <div class="hover:scale-[1.015] transition-all duration-300 py-4 flex flex-col items-center text-white dark:text-gray-300 rounded-md">
                <%= link_to scanlator_path(translator), data: { turbo: false }, class: '' do %>
                  <%= image_tag translator.avatar.present? ? url_for(translator.avatar) : asset_path('scanlator_avatar.webp'),
                    alt: 'translator avatar',
                    class: "w-12 h-12 rounded-full object-cover mb-2 object-cover shadow-sm border border-cyan-700 dark:border-rose-700",
                    loading: "lazy",
                    data: {
                      controller: "lazy-image",
                      lazy_image_target: "image",
                      lazy_image_url_value: translator.avatar.present? ? url_for(translator.avatar) : asset_path('scanlator_avatar.webp')
                    } %>
                <% end %>
                <%= link_to translator.title, scanlator_path(translator), data: { turbo: false }, class: 'md:leading-tight text-xs md:text-base font-semibold text-stone-900 dark:text-gray-100 line-clamp-1 hover:text-cyan-700 dark:hover:text-rose-700 transition-colors duration-300 tracking-tight' %>
                <% if translator.telegram_id? %>
                  <%= link_to "@#{translator.telegram_id}", "https://t.me/#{translator.telegram_id}", target: '_blank', rel: 'noopener noreferrer', class: 'text-xs text-gray-400 font-light tracking-tight line-clamp-1 mt-1 text-center hover:text-cyan-700 dark:hover:text-rose-700 transition-colors duration-300 tracking-tight' %>
                <% else %>
                  <div class="text-xs text-gray-400 font-light tracking-tight line-clamp-1 mt-1 text-center"><%= translator.description %></div>
                <% end %>
              </div>
            <% end %>
          </div>
        </section>
      </div>
    </div>
  <% else %>
    <%= render 'no_history_screen' %>
  <% end %>
</div>
