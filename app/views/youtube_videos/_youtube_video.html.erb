<div class="w-full z-10 relative lg:ml-4">
  <%= link_to youtube_video_path(youtube_video) do %>
    <%= image_tag url_for(youtube_video.thumbnail), alt: youtube_video.title, class: "w-full rounded-md max-h-96 lg:h-40 md:object-cover lg:object-fill" %>
    <div class="absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed opacity-0 hover:opacity-100 transition duration-300 ease-in-out" style="background-color: rgba(251, 251, 251, 0.2)"></div>
  <% end %>
  <div class="relative mt-1">
    <div class="w-full relative mb-2">
      <div class="flex space-x-1 text-gray-500 text-sm mb-2 lg:mb-0 font-oswald w-[96%]">
        <span>
          <%= image_tag url_for(youtube_video.youtube_channel.thumbnail), alt: youtube_video.youtube_channel.title, class: 'h-10 mt-2 rounded-full max-w-none ml-2 lg:ml-0 lg:mr-2 hidden lg:block', height: '40', width: '40' %>
        </span>
        <span>
          <div>
            <%= link_to youtube_video_path(youtube_video) do %>
              <%= tag.h1 youtube_video.title, class: 'mt-2 text-2xl lg:text-lg w-full line-clamp-2 text-black leading-8 lg:leading-5 mb-2 sm:mb-0 lg:mb-1 hover:text-gray-600 hover:pointer' %>
            <% end %>
            <%= link_to youtube_video.youtube_channel.title, "https://www.youtube.com/watch?v=#{youtube_video.video_id}", class: 'text-rose-700 text-base sm:text-lg lg:text-sm font-light hover:underline', target: '_blank' %>
            <%= tag.span "∘", class: 'text-xs font-light' %>
            <%= tag.span "#{time_ago_in_words(youtube_video.published_at)} тому", class: 'text-sm font-light' %>
            <%= tag.span punch(youtube_video.description.to_s), class: 'text-gray-600 text-base mr-1 w-full whitespace-break-spaces font-light line-clamp-3 mt-1 sm:mt-0 lg:mt-2 lg:hidden' %>
          </div>
        </span>
      </div>
    </div>
  </div>
</div>
