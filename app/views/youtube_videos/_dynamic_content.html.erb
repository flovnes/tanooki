<div class="rounded-sm overflow-hidden">
    <%= link_to youtube_video_path(dynamic_content), class: 'block aspect-video mb-2' do %>
    <%= image_tag url_for(dynamic_content.thumbnail),
        alt: dynamic_content.title,
        class: "w-full h-24 object-cover rounded-sm shadow-sm transition duration-300 transform hover:scale-105 opacity-0",
        loading: "lazy",
        data: {
        controller: "lazy-image",
        lazy_image_target: "image",
        lazy_image_url_value: url_for(dynamic_content.thumbnail)
        } %>
    <% end %>
    <div class="px-1 pb-1">
        <%= link_to dynamic_content.title, youtube_video_path(dynamic_content), class: 'drop-shadow sm:leading-tight text-sm text-stone-800 dark:text-gray-200 line-clamp-2 hover:text-cyan-700 dark:hover:text-rose-700 transition-colors duration-300' %>
    </div>
</div>
