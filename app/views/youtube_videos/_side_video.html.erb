<div class="mt-2 lg:mt-0 float-left relative w-full lg:mx-0 mb-1 lg:mb-2 flex justify-center lg:block">
  <div class="rounded-xl float-left relative w-4/5 lg:w-full overflow-hidden lg:h-36 mb-1">
    <%= link_to youtube_video_path(side_video) do %>
      <%= image_tag url_for(side_video.thumbnail), alt: side_video.title, class: "rounded-xl opacity-80 lg:absolute m-auto w-full l-[-9999px] r-[-9999px] max-h-96 lg:h-36 object-cover", width: 320, height: 144 %>
      <div class="z-10 rounded-xl absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed opacity-0 hover:opacity-100 transition duration-300 ease-in-out" style="background-color: rgba(255, 255, 255, 0.2)"></div>
    <% end %>
  </div>
  <div class="grid grid-cols-6 lg:grid-cols-5 gap-1 w-full float-left flex items-center ml-4 md:ml-2 lg:ml-0">
    <div class="col-span-6 lg:col-span-5">
      <div class="w-full float-left rounded-xl mb-1 text-gray-500">
        <div class="hidden sm:block">
          <div class="line-clamp-1 sm:mb-1 lg:mb-0">
            <%= link_to side_video.youtube_channel.title, "https://www.youtube.com/watch?v=#{side_video.video_id}", class: 'text-rose-700 text-sm sm:text-lg md:text-lg lg:text-sm font-light hover:underline md:ml-2 lg:ml-0', target: '_blank' %>
            <%= tag.span "∘", class: 'text-base sm:text-lg font-light' %>
            <%= tag.span "#{time_ago_in_words(side_video.published_at)} тому", class: 'text-sm sm:text-lg md:text-sm lg:text-xs font-light' %>
          </div>
        </div>
        <%= link_to youtube_video_path(side_video) do %>
          <%= tag.h2 side_video.title, class: 'text-gray-700 text-base sm:text-2xl lg:text-xl md:leading-8 lg:leading-6 tracking-tight hover:text-gray-600 hover:pointer mt-0 lg:mt-1 line-clamp-2 md:ml-2 lg:ml-0 sm:mb-1 lg:mb-0' %>
        <% end %>
        <div class="hidden lg:flex lg:flex-col">
          <%= tag.span punch(side_video.description.to_s), class: 'text-gray-600 text-base lg:text-sm mr-1 w-full whitespace-break-spaces font-light line-clamp-3 mt-2 sm:mt-0 lg:mt-1 md:ml-2 lg:ml-0' %>
        </div>
        <%= tag.span side_video.description.to_s, class: 'text-gray-600 text-sm sm:text-base lg:text-sm mr-1 w-full whitespace-break-spaces font-light line-clamp-2 md:line-clamp-3 mt-0 lg:mt-1 md:ml-2 lg:ml-0 lg:hidden' %>
      </div>
    </div>
  </div>
</div>
