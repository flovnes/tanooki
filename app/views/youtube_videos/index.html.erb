<div class="min-h-screen">
  <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url(<%= asset_path('psyduck_background.webp') %>);"></div>
  <div class="absolute inset-0 bg-gradient-to-br from-stone-100 to-stone-200 dark:from-gray-800 dark:to-gray-900 opacity-95"></div>

  <div class="max-w-6xl mx-auto px-4 pb-8 z-10 relative">
    <section class="my-10">
      <h2 class="text-xl lg:text-2xl font-semibold text-stone-800 dark:text-gray-100 mb-4">Останні Оновлення</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <% @latest.each do |video| %>
          <div class="rounded-lg overflow-hidden">
            <%= link_to youtube_video_path(video), class: 'w-full lg:h-44 aspect-[2/3] mb-2' do %>
              <%= image_tag url_for(video.thumbnail), 
                alt: video.title,
                class: "w-full h-48 object-cover rounded-md shadow-sm transition duration-300 transform hover:scale-105 opacity-0",
                loading: "lazy",
                data: {
                  controller: "lazy-image",
                  lazy_image_target: "image",
                  lazy_image_url_value: url_for(video.thumbnail)
                } %>
            <% end %>
            <div class="py-4 px-2">
              <%= link_to video.title, youtube_video_path(video), class: 'leading-tight text-lg font-semibold text-stone-800 dark:text-gray-200 line-clamp-1 hover:text-cyan-600 dark:hover:text-rose-700 transition-colors duration-300 mb-1 line-clamp-1' %>
              <p class="text-stone-700 dark:text-gray-300 text-sm my-2">
                <%= link_to video.youtube_channel.title, search_index_path(search: [video.youtube_channel.title]), class: 'sm:inline text-stone-800 dark:text-gray-200 line-clamp-1 hover:text-cyan-600 dark:hover:text-rose-700 transition-colors duration-300' %> • 
                <%= tag.span l(video.published_at, format: :short).downcase, class: 'sm:inline' %>
              </p>
              <% if video.tags? %>
                <div class="text-xs flex flex-wrap gap-2">
                  <% video.tags.split(', ').first(2).each do |video_tag| %>
                    <%= button_to video_tag, search_index_path, method: :get, id: 'search-video-tag', class: "px-2 lg:px-3 py-1 rounded-md text-xs font-semibold shadow-sm ring-1 transition duration-300 whitespace-nowrap hover:cursor-pointer focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-cyan-500 dark:focus-visible:ring-rose-500 bg-cyan-50 dark:bg-rose-900 text-cyan-800 dark:text-rose-100 ring-cyan-200 dark:ring-rose-900 hover:bg-cyan-100 dark:hover:bg-rose-800 hover:ring-cyan-300 dark:hover:ring-rose-700 hover:scale-105", form_class: 'inline-block', params: { search: [video_tag] } %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <!-- Main Section (Featured Video) -->
    <section class="mb-10 flex flex-col md:flex-row gap-8">
      <div class="md:w-2/3 rounded-lg overflow-hidden">
        <div class="aspect-w-16 aspect-h-9">
          <%= link_to youtube_video_path(@highlight), class: 'w-full h-full aspect-[2/3] mb-2' do %>
            <%= image_tag url_for(@highlight.thumbnail), 
              alt: @highlight.title,
              class: "w-full h-full object-cover rounded-md shadow-sm transition duration-300 transform hover:scale-105 opacity-0",
              loading: "lazy",
              data: {
                controller: "lazy-image",
                lazy_image_target: "image",
                lazy_image_url_value: url_for(@highlight.thumbnail)
              } %>
          <% end %>
        </div>
        <div class="py-6 px-4">
          <%= link_to @highlight.title, youtube_video_path(@highlight), class: 'leading-tight text-2xl font-semibold text-stone-800 dark:text-gray-200 line-clamp-1 hover:text-cyan-600 dark:hover:text-rose-700 transition-colors duration-300 mb-2 line-clamp-1' %>
          <p class="text-stone-700 dark:text-gray-300 text-base mb-2">
            <%= link_to @highlight.youtube_channel.title, search_index_path(search: [@highlight.youtube_channel.title]), class: 'sm:inline text-stone-800 dark:text-gray-200 line-clamp-1 hover:text-cyan-600 dark:hover:text-rose-700 transition-colors duration-300' %> • 
            <%= tag.span l(@highlight.published_at, format: :short).downcase, class: 'sm:inline' %>
          </p>
          <% if @highlight.tags? %>
            <div class="flex flex-wrap gap-2">
              <% @highlight.tags.split(', ').first(4).each do |video_tag| %>
                <%= button_to video_tag, search_index_path, method: :get, id: 'search-video-tag', class: 'px-2 lg:px-3 py-1 rounded-md text-sm font-semibold shadow-sm ring-1 transition duration-300 whitespace-nowrap hover:cursor-pointer focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-cyan-500 dark:focus-visible:ring-rose-500 bg-cyan-50 dark:bg-rose-900 text-cyan-800 dark:text-rose-100 ring-cyan-200 dark:ring-rose-900 hover:bg-cyan-100 dark:hover:bg-rose-800 hover:ring-cyan-300 dark:hover:ring-rose-700 hover:scale-105 inline-block', form_class: 'inline-block', params: { search: [video_tag] } %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <!-- Ad Section -->
      <div class="md:w-1/3 flex flex-col gap-6">
        <!-- Ad Box -->
        <%= render 'shared/ads', advertisement: @advertisement %>

        <div class="grid grid-cols-2 gap-4">
          <% @other_youtube_videos.first(4).each do |video| %>
            <div class="rounded-lg overflow-hidden">
              <%= link_to youtube_video_path(video), class: 'block aspect-video mb-2' do %>
                <%= image_tag url_for(video.thumbnail),
                  alt: video.title,
                  class: "w-full h-28 object-cover rounded-md shadow-sm transition duration-300 transform hover:scale-105 opacity-0",
                  loading: "lazy",
                  data: {
                    controller: "lazy-image",
                    lazy_image_target: "image",
                    lazy_image_url_value: url_for(video.thumbnail)
                  } %>
              <% end %>
              <div class="px-1 pb-1">
                <%= link_to video.title, youtube_video_path(video), class: 'text-sm font-semibold text-stone-800 dark:text-gray-200 line-clamp-2 hover:text-cyan-600 dark:hover:text-rose-700 transition-colors duration-300' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>

    <!-- Popular Section -->
    <section>
      <h2 class="text-xl lg:text-2xl font-semibold text-stone-800 dark:text-gray-100 mb-4">Популярні Відео</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
          <% @popular.each do |video| %>
            <div class="rounded-lg overflow-hidden">
              <%= link_to youtube_video_path(video), class: 'w-full lg:h-44 aspect-[2/3] mb-2' do %>
                <%= image_tag url_for(video.thumbnail), 
                  alt: video.title,
                  class: "w-full h-44 object-cover rounded-md shadow-sm transition duration-300 transform hover:scale-105 opacity-0",
                  loading: "lazy",
                  data: {
                    controller: "lazy-image",
                    lazy_image_target: "image",
                    lazy_image_url_value: url_for(video.thumbnail)
                  } %>
              <% end %>
              <div class="py-4">
                <%= link_to video.title, youtube_video_path(video), class: 'leading-tight text-base font-semibold text-stone-800 dark:text-gray-200 line-clamp-1 hover:text-cyan-600 dark:hover:text-rose-700 transition-colors duration-300 mb-1 line-clamp-1' %>
              </div>
            </div>
          <% end %>
      </div>
    </section>
  </div>
</div>