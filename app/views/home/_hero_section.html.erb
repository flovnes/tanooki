<section class="bg-white dark:bg-gray-900">
    <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-8 lg:grid-cols-12">
        <div class="mr-auto place-self-center lg:col-span-5 mr-6 lg:mr-10">
            <%= link_to tale_path(@highlight) do %>
                <%= tag.h1 @highlight.title, class: 'hover:text-gray-700 max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl dark:text-white' %>
            <% end %>
            <%= tag.p @highlight.description.to_plain_text.truncate(215), class: "text-justify max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400" %>
        </div>
        <div class="hidden lg:mt-0 lg:col-span-7 lg:flex">
            <%= link_to tale_path(@highlight) do %>
                <%= image_tag @highlight.cover, class: "max-w-full h-auto rounded-full transform motion-safe:hover:rotate-7" %>
            <% end %>
        </div>
    </div>
</section>
