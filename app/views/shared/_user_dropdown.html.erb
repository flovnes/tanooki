<button type="button" data-dropdown-toggle="dropdown" class="inline-flex items-center text-gray-900 dark:text-gray-300 hover:bg-gray-50 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-2 lg:px-4 py-2 lg:py-2.5 mr-2 md:mr-3 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800">
  <%= image_tag url_for(current_user.avatar.image), alt: current_user.avatar.blob.filename.to_s, class: 'w-10 h-10 rounded-full' %>
</button>
<!-- Dropdown -->
<div class="hidden z-50 my-4 w-48 text-base list-none bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700" id="dropdown">
  <ul class="py-1" role="none">
    <li>
      <div class="block py-2 px-4 text-sm text-gray-700 dark:text-gray-400">
        <%= tag.span current_user.name, class: "font-semibold" %>
        <%= tag.span current_user.email, class: "font-light truncate" %>
      </div>
    </li>
  </ul>
  <ul class="py-1" role="none">
    <li><%= link_to "Майстерня", blogs_path, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white" %></li>
  </ul>
  <ul class="py-1" role="none">
    <li><%= link_to "Читальня", library_path, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white" %></li>
  </ul>
    <% if current_user.admin? %>
      <ul class="py-1" role="none">
        <li><%= link_to "Жанри", admin_genres_path, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white" %></li>
        <li><%= link_to "Звістки", admin_tales_path, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white" %></li>
        <li><%= link_to "Оголошення", admin_advertisements_path, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white" %></li>
        <li><%= link_to "Покемони", admin_pokemons_path, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white" %></li>
        <li><%= link_to "Портретики", admin_avatars_path, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white0" %></li>
        <li><%= link_to "Теги", admin_tags_path, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white" %></li>
      </ul>
    <% end %>
    <ul class="py-1" role="none">
      <li><%= link_to "Вийти", destroy_user_session_path, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white" %></li>
    </ul>
  </ul>
</div>