<div id="default-sidebar" aria-label="Sidebar">
  <div class="h-full px-3 overflow-y-auto hidden xl:block">
    <ul class="space-y-2 font-medium">
      <a class="flex justify-between items-center p-2 mb-5 w-full rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-4 focus:ring-gray-200" type="button">
        <div class="flex items-center">
          <%= image_tag url_for(current_user.avatar.image), alt: current_user.avatar.blob.filename.to_s, class: 'mr-3 w-8 h-8 rounded-full' %>
          <div class="text-left overflow-hidden">
            <%= tag.div current_user.name, class: 'font-semibold leading-none text-gray-900 my-1' %>
            <%= tag.div current_user.email, class: 'text-sm text-gray-500 mr-1 overflow-hidden text-ellipsis' %>
          </div>
        </div>
      </a>
      <%= tag.li class: "#{'bg-gray-100' if params[:action] == 'blogs' || params[:action] == 'show' || params[:controller] == 'blogs' }" do %>
        <%= link_to blogs_path, remote: true, class: 'flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100' do %>
          <svg class="flex-shrink-0 w-6 h-6 text-gray-500 transition duration-75 group-hover:text-gray-900" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7h1v12a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1V5a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1v14a1 1 0 0 0 1 1h11.5M7 14h6m-6 3h6m0-10h.5m-.5 3h.5M7 7h3v3H7V7Z"/>
          </svg>
          <span class="flex-1 ml-3 whitespace-nowrap">Блог</span>
        <% end %>
      <% end %>
    </ul>
    <ul class="pt-4 mt-4 space-y-2 font-medium border-t border-gray-200 mb-3">
      <%= tag.li class: "#{'bg-gray-100' if params[:controller] == 'scanlators' }" do %>
        <%= link_to scanlators_path, remote: true, class: 'flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100' do %>
          <svg class="flex-shrink-0 w-6 h-6 text-gray-500 transition duration-75 group-hover:text-gray-900" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M4.5 17H4a1 1 0 0 1-1-1 3 3 0 0 1 3-3h1m0-3.05A2.5 2.5 0 1 1 9 5.5M19.5 17h.5a1 1 0 0 0 1-1 3 3 0 0 0-3-3h-1m0-3.05a2.5 2.5 0 1 0-2-4.45m.5 13.5h-7a1 1 0 0 1-1-1 3 3 0 0 1 3-3h3a3 3 0 0 1 3 3 1 1 0 0 1-1 1Zm-1-9.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0Z"/>
          </svg>
          <span class="flex-1 ml-3 whitespace-nowrap">Команди</span>
        <% end %>
      <% end %>
      <%= tag.li class: "#{'bg-gray-100' if params[:action] == 'readings' || params[:controller] == 'fictions' }" do %>
        <%= link_to readings_path, remote: true, class: 'flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100' do %>
          <svg class="flex-shrink-0 w-6 h-6 text-gray-500 transition duration-75 group-hover:text-gray-900" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m4.988 19.012 5.41-5.41m2.366-6.424 4.058 4.058-2.03 5.41L5.3 20 4 18.701l3.355-9.494 5.41-2.029Zm4.626 4.625L12.197 6.61 14.807 4 20 9.194l-2.61 2.61Z"/>
          </svg>
          <span class="flex-1 ml-3 whitespace-nowrap">Писальня</span>
        <% end %>
      <% end %>
    </ul>
    <ul class="pt-4 mt-4 space-y-2 font-medium border-t border-gray-200 mb-3">
      <%= tag.li class: "#{'bg-gray-100' if params[:action] == 'pokemons' }" do %>
        <%= link_to pokemons_path, remote: true, class: 'flex items-center px-2 text-gray-900 rounded-lg hover:bg-gray-100' do %>
          <svg class="flex-shrink-0 w-6 h-10 text-gray-500 transition duration-75 group-hover:text-gray-900" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 16H5a1 1 0 0 1-1-1V5a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v1M9 12H4m8 8V9h8v11h-8Zm0 0H9m8-4a1 1 0 1 0-2 0 1 1 0 0 0 2 0Z"/>
          </svg>
          <span class="flex-1 ml-3 whitespace-nowrap">Покемони</span>
        <% end %>
      <% end %>
      <%= tag.li class: "#{'bg-gray-100' if params[:action] == 'avatars' }" do %>
        <%= link_to avatars_path, remote: true, class: 'flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100' do %>
          <svg class="flex-shrink-0 w-6 h-6 text-gray-500 transition duration-75 group-hover:text-gray-900" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 9h3m-3 3h3m-3 3h3m-6 1c-.306-.613-.933-1-1.618-1H7.618c-.685 0-1.312.387-1.618 1M4 5h16a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1Zm7 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0Z"/>
          </svg>
          <span class="flex-1 ml-3 whitespace-nowrap">Профіль</span>
        <% end %>
      <% end %>
      <%= tag.li class: "#{'bg-gray-100' if params[:action] == 'notifications' }" do %>
        <%= link_to notifications_path, remote: true, class: 'flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100' do %>
          <svg class="flex-shrink-0 w-6 h-6 text-gray-500 transition duration-75 group-hover:text-gray-900" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5.464V3.099m0 2.365a5.338 5.338 0 0 1 5.133 5.368v1.8c0 2.386 1.867 2.982 1.867 4.175C19 17.4 19 18 18.462 18H5.538C5 18 5 17.4 5 16.807c0-1.193 1.867-1.789 1.867-4.175v-1.8A5.338 5.338 0 0 1 12 5.464ZM6 5 5 4M4 9H3m15-4 1-1m1 5h1M8.54 18a3.48 3.48 0 0 0 6.92 0H8.54Z"/>
          </svg>
          <span class="flex-1 ml-3 whitespace-nowrap">Сповіщення</span>
        <% end %>
      <% end if latest_comments.any? %>
    </ul>
  </div>

  <div class="h-full px-3 overflow-y-auto xl:hidden">
    <div class="flex flex-wrap items-center justify-between mx-auto px-4 py-2">
      <div class="flex items-center">
        <%= image_tag url_for(current_user.avatar.image), alt: current_user.avatar.blob.filename.to_s, class: 'mr-3 w-8 h-8 rounded-full' %>
        <div class="text-left">
          <%= tag.div current_user.name, class: 'font-semibold leading-none text-gray-900 my-1' %>
          <%= tag.div current_user.email, class: 'text-sm text-gray-500' %>
        </div>
      </div>
      <button data-collapse-toggle="navbar-solid-bg" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="navbar-solid-bg" aria-expanded="false">
        <span class="sr-only">Open main menu</span>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
      </button>
      <div class="hidden w-full md:block md:w-auto" id="navbar-solid-bg">
        <ul class="flex flex-col font-medium mt-4 rounded-lg md:flex-row md:space-x-8 md:mt-0 md:border-0 text-center md:text-inherit">
          <li><%= link_to 'Блоги', blogs_path, class: 'block py-1 pl-3 pr-4 text-gray-900 rounded hover:text-gray-600 md:p-0 bg-gray-50 md:bg-white my-1' %></li>
          <li><%= link_to 'Команди', scanlators_path, class: 'block py-1 pl-3 pr-4 text-gray-900 rounded hover:text-gray-600 md:p-0 bg-gray-50 md:bg-white my-1' %></li>
          <li><%= link_to 'Писальня', readings_path, class: 'block py-1 pl-3 pr-4 text-gray-900 rounded hover:text-gray-600 md:p-0 bg-gray-50 md:bg-white my-1' %></li>
          <li><%= link_to 'Покемони', pokemons_path, class: 'block py-1 pl-3 pr-4 text-gray-900 rounded hover:text-gray-600 md:p-0 bg-gray-50 md:bg-white my-1' %></li>
          <li><%= link_to 'Профіль', avatars_path, class: 'block py-1 pl-3 pr-4 text-gray-900 rounded hover:text-gray-600 md:p-0 bg-gray-50 md:bg-white my-1' %></li>
          <li><%= link_to 'Сповіщення', notifications_path, class: 'block py-1 pl-3 pr-4 text-gray-900 rounded hover:text-gray-600 md:p-0 bg-gray-50 md:bg-white my-1' %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
