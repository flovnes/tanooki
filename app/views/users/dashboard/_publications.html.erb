<div class="flow-root">
  <%= tag.h3 "Мої Звістки (#{pagy.count})", class: 'text-xl font-bold' %>
  <ul class="divide-y divide-gray-200">
    <% publications.each do |publication| %>
      <li class="py-4">
        <div class="flex items-center space-x-4">
          <div class="flex-1 min-w-0">
            <%= tag.p publication.title, class: 'text-base font-semibold text-gray-900 truncate' %>
            <%= tag.p "#{time_ago_in_words(publication.created_at)} тому", class: 'text-sm font-normal text-gray-500 truncate' %>
          </div>
          <div class="inline-flex items-center">
            <%= link_to 'Редагувати', edit_publication_path(publication.slug), data: { turbo: false }, class: 'py-2 px-3 mr-3 mb-3 text-sm font-medium text-center text-gray-900 bg-white rounded-lg border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-primary-300'  %>
            <%= link_to 'Видалити', publication_path(publication, page: params[:page]), data: { turbo_confirm: 'Певні, що прагнете видалити цю публікацію?', "turbo-method": :delete }, class: 'py-2 px-3 mr-3 mb-3 text-sm font-medium text-center text-gray-900 bg-white rounded-lg border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-primary-300'  %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="">
    <div class="float-left mt-3">
      <%= link_to "Створити Звістку", new_publication_path, data: { turbo: false }, class: 'text-white bg-emerald-700 hover:bg-emerald-800 focus:ring-4 focus:ring-emerald-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center' %>
    </div>
    <div class="pagy-nav mt-8 sm:mt-0 float-right my-2">
      <%== pagy_nav(pagy) if pagy.pages > 1 %>
    </div>
  </div>
</div>