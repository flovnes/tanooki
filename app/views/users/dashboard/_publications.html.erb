<div class="flow-root">
  <%= tag.h3 "Мої Звістки (#{pagy.count})", class: 'text-xl font-bold' %>
  <ul class="divide-y divide-gray-200">
    <% publications.each do |publication| %>
      <li class="py-4">
        <div class="flex items-center space-x-4">
          <div class="flex-1 min-w-0">
            <%= tag.p publication.title, class: 'text-base font-semibold text-gray-900 truncate' %>
            <div class="flex">
              <%= tag.p "#{time_ago_in_words(publication.created_at)} тому", class: 'text-sm font-normal text-gray-500 truncate inline-block' %>
              <span class="text-gray-500 ml-3 text-xs mt-1 flex align-center">
                <%= image_tag 'comment.svg', class: 'h-4 inline-block', alt: 'comments' %>
                <%= tag.span publication.comments.size, class: 'ml-1 inline-block' %>
              </span>
              <span class="text-gray-500 ml-3 text-xs mt-1 flex align-center">
                <%= image_tag 'eye.svg', class: 'h-4 inline-block', alt: 'views' %>
                <%= tag.span publication.views, class: 'ml-1 inline-block' %>
              </span>
            </div>
          </div>
          <div class="inline-flex items-center">
            <%= link_to tale_path(publication.slug), data: { turbo: false } do %>
              <%= image_tag 'view.svg', class: 'h-5 md:h-6 lg:h-7 inline-block mx-1 transform transition duration-500 hover:scale-110', alt: 'views' %>
            <% end %>
            <%= link_to edit_publication_path(publication.slug), data: { turbo: false } do %>
              <%= image_tag 'edit.svg', class: 'h-5 md:h-6 lg:h-7 inline-block mx-2 transform transition duration-500 hover:scale-110', alt: 'views' %>
            <% end %>
            <%= link_to publication_path(publication, page: params[:page]), data: { turbo_confirm: 'Певні, що прагнете видалити цю публікацію?', "turbo-method": :delete } do %>
              <%= image_tag 'delete.svg', class: 'h-5 md:h-6 lg:h-7 inline-block mx-1 transform transition duration-500 hover:scale-110', alt: 'views' %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="">
    <div class="float-left mt-3">
      <%= link_to "Створити Звістку", new_publication_path, data: { turbo: false }, class: 'text-white bg-emerald-700 hover:bg-emerald-800 focus:ring-4 focus:ring-emerald-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center' %>
    </div>
    <div class="pagy-nav mt-8 sm:mt-0 float-right my-2">
      <%== pagy_nav(pagy) if pagy.pages > 1 %>
    </div>
  </div>
</div>