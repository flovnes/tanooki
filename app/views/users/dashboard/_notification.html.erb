<div class="p-4 space-y-2 bg-gray-50 shadow-lg xl:p-6 2xl:p-8 lg:space-y-4 mb-2 rounded-lg relative bg-no-repeat bg-cover bg-center bg-fixed" style="background-image: url(<%= asset_path('writer.webp') %>);">
  <div class="absolute inset-0 bg-white opacity-95"></div>
  <div class="flex items-center space-x-4 relative z-10">
    <div class="flex-shrink-0">
      <%= image_tag url_for(notification.user.avatar.image), alt: notification.user.avatar.blob.filename.to_s, class: 'w-10 h-10 rounded-full', height: '48', width: '48' %>
      <div class="absolute flex items-center justify-center w-5 h-5 ms-6 -mt-5 bg-green-500 border border-white rounded-full">
        <svg class="w-2 h-2 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
          <path d="M18 0H2a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h2v4a1 1 0 0 0 1.707.707L10.414 13H18a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2Zm-5 4h2a1 1 0 1 1 0 2h-2a1 1 0 1 1 0-2ZM5 4h5a1 1 0 1 1 0 2H5a1 1 0 0 1 0-2Zm2 5H5a1 1 0 0 1 0-2h2a1 1 0 0 1 0 2Zm9 0h-6a1 1 0 0 1 0-2h6a1 1 0 1 1 0 2Z"/>
        </svg>
      </div>
    </div>
    <div class="flex-1 min-w-0">
      <div class="text-gray-500">
        <%= tag.span notification.user.name, class: 'font-semibold text-gray-900' %>
        <%= tag.span "лишив коментар до #{commentable_type(notification.commentable)}", class: 'font-light' %>
        <%= tag.span class: 'font-medium text-blue-500 hover:underline' do %>
          <%= link_to commentable_title(notification.commentable), comment_url(notification) %>
        <% end %>
      </div>
      <%= tag.p l(notification.created_at, format: :short).downcase, class: 'text-sm font-normal text-gray-500 truncate' %>
    </div>
  </div>
  <%= tag.p notification.content, class: 'relative z-10 text-base font-normal text-gray-500 whitespace-break-spaces' %>
</div>
