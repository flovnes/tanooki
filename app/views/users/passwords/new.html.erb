<section class="relative min-h-screen flex items-center justify-center py-16 px-4">
  <div class="w-full max-w-7xl bg-white/90 dark:bg-gray-950/90 rounded-2xl shadow-2xl flex flex-col md:flex-row overflow-hidden border border-gray-200 dark:border-gray-700">
    <!-- Left: Form and Info -->
    <div class="flex-1 flex flex-col justify-center p-10 md:p-14">
      <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900 dark:text-gray-100 mb-2 tracking-tight leading-tight">
        Втратили Доступ до Акаунту?
      </h1>
      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 font-light mb-6">
        Надішліть свою електронну пошту і ми відправимо Вам інструкції для відновлення!
      </p>
      <div class="bg-emerald-50 dark:bg-gray-900/70 rounded-xl shadow-inner p-6 md:p-8 mb-4 border border-gray-200 dark:border-gray-700">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
          <div>
            <%= f.input :email,
              id: 'email',
              required: true,
              autofocus: true,
              label: "Електронна Адреса",
              placeholder: "user@baka.in.ua",
              input_html: {
                autocomplete: "email",
                class: "w-full py-3 px-4 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-950 text-base text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-emerald-400 transition #{'border-red-500' if resource.errors[:email].any? }"
              },
              label_html: {
                class: 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'
              } %>
            <%= tag.span resource.errors[:email].uniq.join(""), class: "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" if resource.errors[:email].any? %>
          </div>
          <div class="flex justify-end mt-4">
            <%= link_to 'Перейти до Авторизації', new_session_path, class: 'text-sm font-medium text-emerald-700 dark:text-emerald-400 hover:underline transition' %>
          </div>
          <%= f.button :submit, "Відновити Пароль", class: "mt-8 w-full py-3 rounded-lg bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white font-bold text-lg tracking-wide shadow-lg transition uppercase" %>
        <% end %>
      </div>
    </div>
    <!-- Right: Visual -->
    <div class="hidden md:flex flex-1 items-center justify-center bg-gradient-to-tr from-emerald-100 via-white to-emerald-50 dark:from-gray-950 dark:via-gray-900 dark:to-gray-950">
      <%= image_tag 'forgot_password.png', alt: 'forgot_password', class: 'w-72 h-72 object-cover rounded-xl shadow-lg border-4 border-emerald-100 dark:border-gray-800' %>
    </div>
  </div>
</section>
