<section class="relative min-h-screen flex items-center justify-center py-16 px-4">
  <div class="w-full max-w-7xl bg-white/90 dark:bg-gray-950/90 rounded-2xl shadow-2xl flex flex-col md:flex-row overflow-hidden border border-gray-200 dark:border-gray-700">
    <!-- Left: Form and Info -->
    <div class="flex-1 flex flex-col justify-center p-10 md:p-14">
      <h1 class="text-3xl md:text-4xl font-extrabold text-cyan-700 dark:text-rose-700 mb-2 tracking-tight leading-tight">
        Оновлення Паролю
      </h1>
      <p class="text-lg md:text-xl text-stone-800 dark:text-gray-200 font-light mb-6 tracking-tight">
        Для зміни введіть та підтвердіть новий пароль!
      </p>
      <div class="bg-cyan-50 dark:bg-gray-900/70 rounded-xl shadow-inner p-6 md:p-8 mb-4 border border-gray-200 dark:border-gray-700">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= f.input :password,
                id: 'password',
                required: true,
                autofocus: true,
                label: "Новий Пароль",
                placeholder: "***********",
                input_html: {
                  autocomplete: "current-password",
                  class: "font-light text-base w-full p-3 block rounded-md border border-gray-200 dark:border-gray-700 text-stone-800 dark:text-gray-200 bg-white dark:bg-gray-950 tracking-tight #{'border-red-500' if resource.errors[:password].any? }"
                },
                label_html: {
                  class: 'block text-sm font-light text-stone-900 dark:text-gray-100 mb-2 tracking-tight'
                } %>
              <%= tag.span resource.errors[:password].to_sentence(two_words_connector: "", last_word_connector: ""), class: "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" if resource.errors[:password].any? %>
            </div>
            <div>
              <%= f.input :password_confirmation,
                id: 'password_confirmation',
                required: true,
                label: "Підтвердження Паролю",
                placeholder: "***********",
                input_html: {
                  autocomplete: "password_confirmation",
                  class: "font-light text-base w-full p-3 block rounded-md border border-gray-200 dark:border-gray-700 text-stone-800 dark:text-gray-200 bg-white dark:bg-gray-950 tracking-tight #{'border-red-500' if resource.errors[:password_confirmation].any? }"
                },
                label_html: {
                  class: 'block text-sm font-light text-stone-900 dark:text-gray-100 mb-2 tracking-tight'
                } %>
              <%= tag.span resource.errors[:password_confirmation].to_sentence(two_words_connector: "", last_word_connector: ""), class: "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" if resource.errors[:password_confirmation].any? %>
            </div>
          </div>
          <div class="flex justify-end mt-4">
            <%= link_to 'Перейти до Авторизації', new_user_session_path, class: 'inline-flex text-sm lg:text-base text-stone-700 dark:text-gray-300 hover:text-cyan-600 hover:underline dark:hover:text-rose-700 transition' %>
          </div>
          <%= f.button :submit, "Оновити Пароль", class: "mt-8 w-full py-3 rounded-xl bg-cyan-700 dark:bg-rose-700 text-white dark:text-gray-100 font-bold text-sm sm:text-base shadow-sm ring-1 ring-cyan-800 dark:ring-rose-800 inline-flex items-center gap-1 uppercase tracking-tight hover:bg-cyan-800 dark:hover:bg-rose-800 transition duration-300" %>
        <% end %>
      </div>
    </div>
    <!-- Right: Visual -->
    <div class="hidden md:flex flex-1 items-center justify-center bg-gradient-to-tr from-cyan-100 via-white to-cyan-50 dark:from-gray-950 dark:via-gray-900 dark:to-gray-950">
      <%= image_tag 'password_edit.png', alt: 'password edit', class: 'w-72 h-72 object-cover rounded-xl shadow-lg border-4 border-cyan-100 dark:border-gray-800' %>
    </div>
  </div>
</section>
