<div class="relative w-full mx-auto border-0 rounded-md shadow-2xl overflow-hidden mb-2">
  <!-- Decorative Top Bar -->
  <div class="h-2 bg-gradient-to-r from-blue-400 via-fuchsia-400 to-indigo-400"></div>

  <!-- Main Content Area -->
  <div class="px-4 sm:px-8 pt-6 sm:pt-8 pb-6 sm:pb-8 flex flex-col gap-6">
    <!-- Header: Avatar & User Info + Title & Message -->
    <div class="flex flex-col lg:flex-row items-center lg:items-start gap-6 lg:gap-10">
      <!-- User Avatar and Info -->
      <div class="flex flex-col items-center w-24 sm:w-36 md:w-40">
        <%= image_tag url_for(current_user.avatar.image), alt: current_user.avatar.image.blob.filename, class: 'h-12 w-12 sm:w-16 sm:h-16 md:w-20 md:h-20 rounded-full mb-2 sm:mb-3 shadow-md transition-transform duration-500 hover:scale-110' %>
        <div class="text-center">
          <%= tag.div current_user.name, class: 'text-sm sm:text-base font-bold text-gray-900' %>
          <%= tag.div "#{dex_title(current_user.battle_win_rate)} ##{dex_overall.index(current_user) + 1}", class: 'font-light text-xs sm:text-sm text-gray-500' %>
        </div>
      </div>

      <!-- Pokéball Icon, Title, and Message -->
      <div class="flex-1 flex flex-col items-center lg:items-start gap-2">
        <div class="flex items-center gap-2 sm:gap-3 drop-shadow uppercase leading-5 text-gray-900 dark:text-gray-100 text-base sm:text-lg md:text-xl lg:text-2xl font-extrabold">
          <span class="hidden sm:flex flex-shrink-0 flex items-center justify-center rounded-full py-1 sm:py-2">
            <!-- Pokéball SVG Icon -->
            <svg class="h-8 w-8 sm:h-10 sm:w-10" fill="none" viewBox="0 0 48 48" stroke="currentColor">
              <circle cx="24" cy="24" r="22" stroke-width="3" class="text-cyan-600 dark:text-rose-700" />
              <circle cx="24" cy="24" r="8" stroke-width="3" class="text-cyan-600 dark:text-rose-700" />
              <circle cx="24" cy="24" r="4" fill="currentColor" class="text-white" />
              <line x1="2" y1="24" x2="46" y2="24" stroke-width="3" class="text-cyan-600 dark:text-rose-700" />
            </svg>
          </span>
          <span class="text-center md:text-left">
            Перерва в <span class="text-cyan-600 dark:text-rose-700">Центрі Покемонів!</span>
          </span>
        </div>
        <p class="text-stone-800 dark:text-gray-200 text-xs sm:text-sm md:text-base font-light text-center lg:text-left">
          Команда відпочиває! Незабаром покемони знову будуть готові до бою!
        </p>
      </div>
    </div>

    <!-- Cooldown Status -->
    <div class="flex justify-center">
      <div class="inline-flex items-center gap-2 shadow-sm ring-1 ring-cyan-700 dark:ring-rose-800 bg-cyan-600 dark:bg-rose-700 text-white dark:text-gray-100 py-2 px-3 sm:py-3 sm:px-6 rounded-xl text-xs sm:text-sm md:text-base">
        <svg class="w-5 h-5 animate-pulse" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3" />
          <circle cx="12" cy="12" r="10" stroke-width="2" />
        </svg>
        Відновлення: 
        <span class="font-bold"><%= reason_for_cooldown(current_user) %></span>
      </div>
    </div>
  </div>

  <!-- Decorative Bottom Glow -->
  <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-2/3 h-6 bg-gradient-to-r from-blue-200 via-fuchsia-200 to-indigo-200 opacity-50 blur-lg"></div>
</div>
