<div class="relative mx-auto my-4 border border-gray-300 rounded-md shadow-2xl overflow-hidden">
  <!-- Decorative Top Bar -->
  <div class="h-2 bg-gradient-to-r from-blue-400 via-fuchsia-400 to-indigo-400"></div>

  <!-- Main Content Area -->
  <div class="relative z-10 flex items-center justify-between px-8 py-6">
    <!-- Avatar and User Info -->
    <div class="flex flex-col items-center w-1/3">
      <div class="overflow-hidden rounded-full shadow-md mb-3 transition-transform duration-500 hover:scale-110">
        <%= image_tag url_for(current_user.avatar.image), alt: current_user.avatar.image.blob.filename, class: 'h-10 w-10 sm:w-20 sm:h-20 object-cover' %>
      </div>
      <span class="flex items-center text-sm sm:text-base font-bold text-gray-900">
        <%= current_user.name %>
      </span>
      <span class="px-3 text-[10px] sm:text-xs uppercase tracking-widest text-cyan-700 rounded-md shadow-sm line-clamp-1">
        <%= "#{dex_title(current_user.battle_win_rate)} ##{dex_overall.index(current_user) + 1}" %>
      </span>
      <div class="mt-3 flex items-center gap-1 shadow-sm ring-1 ring-cyan-700 text-cyan-700 py-1 px-2 rounded-md">
        <svg class="w-3 h-3 animate-pulse" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3" />
          <circle cx="12" cy="12" r="10" stroke-width="2" />
        </svg>
        <span class="font-bold text-[10px] sm:text-xs"><%= reason_for_cooldown(current_user) %></span>
      </div>
    </div>

    <!-- Title & Message -->
    <div class="flex flex-col sm:items-center w-2/3 pl-6">
      <div class="flex sm:items-center gap-2 text-lg font-extrabold uppercase text-gray-900">
        <span class="hidden md:inline-block">
          <!-- Pokéball SVG -->
          <svg class="h-8 w-8 text-cyan-600" fill="none" viewBox="0 0 48 48" stroke="currentColor">
            <circle cx="24" cy="24" r="22" stroke-width="3" />
            <circle cx="24" cy="24" r="8" stroke-width="3" />
            <circle cx="24" cy="24" r="4" fill="currentColor" class="text-white" />
            <line x1="2" y1="24" x2="46" y2="24" stroke-width="3" />
          </svg>
        </span>
        <span class="text-xs sm:text-lg leading-tight">Перерва в <span class="text-cyan-600">Центрі Покемонів!</span></span>
      </div>
      <div class="text-[10px] sm:text-xs text-stone-800 font-light uppercase sm:tracking-widest mt-3 sm:text-center">
        Команда відпочиває! Незабаром покемони знову будуть готові до бою!
      </div>
    </div>
  </div>

  <!-- Decorative Bottom Glow -->
  <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-2/3 h-6 bg-gradient-to-r from-blue-200 via-fuchsia-200 to-indigo-200 opacity-50 blur-lg"></div>
</div>
