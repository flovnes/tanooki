<% color_classes = direction == :previous ? {
  border: 'border-blue-500',
  text: 'text-blue-600 dark:text-blue-400',
  hover: 'group-hover:text-blue-600 dark:group-hover:text-blue-400'
} : {
  border: 'border-green-500',
  text: 'text-green-600 dark:text-green-400',
  hover: 'group-hover:text-green-600 dark:group-hover:text-green-400'
} %>

<%= link_to chapter_path(chapter), class: "block group" do %>
  <div class="bg-white dark:bg-gray-700 rounded-lg shadow-md p-6 h-full transition duration-300 ease-in-out transform hover:scale-105 hover:shadow-xl border-l-4 <%= color_classes[:border] %>">
    <h4 class="mb-2 text-sm font-bold <%= color_classes[:text] %> uppercase tracking-wider">
      <%= direction == :previous ? 'Попереднє' : 'Далі' %>
    </h4>
    <h5 class="text-xl font-semibold text-gray-900 dark:text-white <%= color_classes[:hover] %> transition duration-300">
      <%= chapter.display_title %>
    </h5>
  </div>
<% end %>
