<div class="rounded-lg mb-16">
  <div class="rounded-md relative">
    <div class="bg-center bg-no-repeat bg-cover absolute top-0 right-0 bottom-0 left-0 h-[110%]" style="background-image: url(<%= url_for(fiction.cover) %>); filter: blur(15px) brightness(40%); z-index: 0;"></div>
    <div class="flex justify-center relative">
      <div class="w-[10%] sm:w-[10%] md:w-[15%] lg:w-[20%] 2xl:w-[25%]"></div>
      <%= link_to fiction_path(fiction), class: 'hidden sm:block w-[1%] sm:w-[30%] lg:w-[20%] text-center' do %>
        <%= image_tag url_for(fiction.cover), alt: fiction.cover.blob.filename, class: 'h-96 object-cover rounded-lg shadow-lg inline-block align-middle' %>
      <% end %>
      <div class="w-[72.5%] sm:w-[40%] md:w-[35%] 2xl:w-[25%]">
        <%= tag.h3 fiction.title, class: 'ml-6 mt-4 mb-1 text-xl sm:text-2xl md:text-3xl text-white' %>
        <% if fiction.genres.any? %>
          <div class="ml-6 mt-2 overflow-hidden break-words line-clamp-4">
            <% fiction.genres.each do |genre| %>
              <%= tag.p "##{genre.name}", class: 'inline-block tracking-widest leading-4 text-xs font-semibold mr-2 whitespace-nowrap uppercase text-emerald-500 dark:text-gray-300' %>
            <% end %>
          </div>
        <% end %>
        <%= tag.h3 fiction.description, class: 'sm:line-clamp-6 lg:line-clamp-none whitespace-break-spaces mt-2 mb-8 sm:my-0 ml-6 sm:mt-4 text-sm sm:text-base md:text-lg text-gray-200 font-light mr-[1.75%]' %>
      </div>
      <div class="w-[15%] sm:w-[15%] md:w-[20%] lg:w-[25%] 2xl:w-[30%]"></div>
    </div>
  </div>
</div>
