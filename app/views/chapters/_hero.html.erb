<div class="max-w-4xl mx-auto bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden mb-8">
  <div class="p-6">
    <nav class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-4" aria-label="Breadcrumb">
      <%= link_to "Усі Твори", root_path, class: "hover:text-green-600 dark:hover:text-green-400 line-clamp-1" %>
      <svg class="w-5 h-5 mx-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      <%= link_to fiction.title, fiction_path(fiction), class: "hover:text-green-600 dark:hover:text-green-400 line-clamp-1" %>
      <svg class="w-5 h-5 mx-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      <span class="text-gray-700 dark:text-gray-300 line-clamp-1"><%= chapter.display_chapter_numbers %></span>
    </nav>

    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4"><%= chapter.title %></h1>

    <div class="flex flex-wrap gap-2 mb-4">
      <% fiction.genres.each do |genre| %>
        <span class="px-3 py-1 text-xs font-semibold text-white bg-green-600 rounded-full"><%= genre.name %></span>
      <% end %>
    </div>

    <div class="flex items-center justify-between border-t border-gray-200 dark:border-gray-700 pt-4">
      <div class="text-sm text-gray-600 dark:text-gray-400">
        <% chapter.scanlators.each_with_index do |scanlator, index| %>
          <%= link_to scanlator.title, scanlator_path(scanlator), class: 'hover:underline' %><%= ', ' unless index == chapter.scanlators.length - 1 %>
        <% end %>
      </div>
      <div class="flex items-center">
        <%= button_to epub_download_path(chapter.content), method: :get, data: { turbo: false }, class: 'text-green-600 hover:text-green-800 dark:text-green-400 dark:hover:text-green-300 p-2.5' do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
          </svg>
        <% end if chapter.scanlators.all?(&:convertable?) %>

        <% if current_user && current_user.admin? || current_user == chapter.user %>
          <%= link_to edit_chapter_path(chapter), class: 'text-green-600 hover:text-green-800 dark:text-green-400 dark:hover:text-green-300 p-2.5' do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          <% end %>
        <% end %>

        <button id="font-toggle" type="button" class="text-green-600 hover:text-green-800 dark:text-green-400 dark:hover:text-green-300 p-2.5">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/>
          </svg>
        </button>
      </div>
    </div>
</div>
