<%= turbo_frame_tag comment do %>
  <%= render 'comments/comment_body', comment: comment %>
  <%= turbo_frame_tag 'replies' do %>
    <% comment.comments.each do |reply| %>
      <%= turbo_frame_tag "reply-#{reply.id}" do %>
        <%= render 'comments/comment_body', comment: reply %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
