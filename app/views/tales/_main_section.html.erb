<% main_highlight = highlights.first %>
<div class="lg:pt-2 lg:mb-3 block md:flex lg:block">
  <div class="rounded-md float-left relative w-full md:w-4/5 lg:w-full overflow-hidden h-72 md:h-48 lg:h-72 mb-2 md:mb-1 lg:mb-2">
    <%= link_to tale_path(main_highlight) do %>
      <%= image_tag url_for(main_highlight.cover), alt: main_highlight.cover.blob.filename.to_s, class: "rounded-md opacity-80 m-auto w-full l-[-9999px] r-[-9999px] h-72 md:h-48 lg:h-72 lg:mt-4 object-cover lg:object-fill", loading: 'eager' %>
      <div class="z-10 rounded-md absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed opacity-0 hover:opacity-100 transition duration-300 ease-in-out" style="background-color: rgba(255, 255, 255, 0.2)"></div>
    <% end %>
  </div>
  <div class="lg:border-b-4 border-purple-300 grid grid-cols-6 lg:grid-cols-5 gap-1 w-full float-left flex items-center md:ml-4 lg:ml-0 lg:mb-4">
    <div class="col-span-6 lg:col-span-5">
      <% main_highlight.tags.each do |tg| %>
        <%= link_to tg.name, search_index_path(search: [tg.name]), class: 'bg-purple-100 text-purple-800 text-xs lg:text-sm font-semibold mr-2 px-2.5 py-0.5 my-1 rounded hover:bg-purple-800 hover:text-purple-100' %>
      <% end %>
      <h2 class="my-2 text-2xl md:text-2xl lg:text-3xl font-bold tracking-tight text-gray-900 hover:underline">
        <%= link_to main_highlight.title, tale_path(main_highlight) %>
      </h2>
      <%= tag.p main_highlight.description.to_plain_text, class: 'mb-4 mt-2 font-light text-gray-500 mr-1 w-full whitespace-break-spaces font-light line-clamp-2 md:line-clamp-3 lg:line-clamp-2 mt-2 lg:mt-1 lg:leading-6' %>
    </div>
  </div>
</div>
<div class="relative float-left w-full mt-0">
  <% highlights.excluding(main_highlight).each do |publication| %>
    <%= render 'responsive_tile', publication: %>
  <% end %>
</div>
