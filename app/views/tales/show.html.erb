<main class="pt-8 pb-16 lg:pb-24 bg-white">
  <div class="flex justify-between px-4 mx-auto max-w-screen-xl ">
    <article class="mx-auto w-full max-w-2xl format format-sm sm:format-base lg:format-lg format-blue p-10 shadow-lg">
      <header class="mb-4 not-format">
        <address class="flex items-center mb-6 not-italic">
          <div class="inline-flex items-center mr-3 text-sm text-gray-900">
            <div>
              <%= tag.p "Опубліковано #{@tale.created_at.strftime("%d.%m.%Y")}", class: "text-base font-light text-gray-500" %>
            </div>
          </div>
        </address>
        <div class="container py-2 px-10 mx-0 min-w-full flex flex-col items-center">
          <%= tag.h1 @tale.title, class: "text-center mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl" %>
        </div>
      </header>
      <figure class="mb-6"><%= image_tag @tale.cover, class: "rounded-lg" %></figure>
      <%= tag.p @tale.description %>
    </article>
  </div>
</main>
