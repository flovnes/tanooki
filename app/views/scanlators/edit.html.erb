    <h2 class="mb-4 text-xl font-semibold leading-none text-gray-900">Оновити Команду</h2>
    <%= simple_form_for @scanlator, as: :scanlator, url: scanlator_path(@scanlator), method: :put, html: { class: "form" } do |f| %>
