<div class="w-11/12 mx-0 my-auto">
  <div class="ml-0 grid sm:grid-cols-2 md:grid-cols-4 gap-2 rounded-xl">
    <% publications.each do |publication| %>
      <%= link_to tale_path(publication) do %>
        <div class="float-left relative w-full lg:mx-0 mb-2">
          <div class="rounded-xl float-left relative w-full overflow-hidden h-36">
            <%= image_tag url_for(publication.cover), alt: publication.cover.blob.filename.to_s, class: "rounded-xl opacity-80 absolute m-auto w-full h-36 object-cover" %>
          </div>
          <div class="w-full float-left px-0 pt-4 pb-2 items-center">
            <div class="w-full flex rounded-xl mb-1">
              <%= tag.span l(publication.created_at, format: :short).downcase, class: 'block text-gray-500 dark:text-gray-400 text-xs w-full float-left' %>
              <span class="text-gray-500 dark:text-gray-400 text-xs float-right mr-4 flex align-center">
                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17h6l3 3v-3h2V9h-2M4 4h11v8H9l-3 3v-3H4V4Z"/>
                </svg>
                <%= tag.span publication.comments_count, class: 'ml-1 inline-block' %>
              </span>
              <span class="text-gray-500 dark:text-gray-400 text-xs float-right mr-4 flex align-center">
                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-width="2" d="M21 12c0 1.2-4.03 6-9 6s-9-4.8-9-6c0-1.2 4.03-6 9-6s9 4.8 9 6Z"/>
                  <path stroke="currentColor" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
                </svg>
                <%= tag.span publication.views, class: 'ml-1 inline-block' %>
              </span>
            </div>
            <div>
              <%= tag.h2 publication.title, class: 'text-gray-700 dark:text-gray-100 float-left text-2xl md:text-lg md:leading-6 lg:leading-6 lg:text-xl tracking-tight w-full' %>
            </div>
          </div>
          <div class="z-10 rounded-xl absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed opacity-0 hover:opacity-100 transition duration-300 ease-in-out" style="background-color: rgba(255, 255, 255, 0.2)"></div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
