<%= render 'shared/divider_shiny_pink', caption: 'Фільтр' %>
<div id="default-sidebar" aria-label="Sidebar">
  <div class="h-full px-3 overflow-y-auto font-oswald">
    <ul class="space-y-2 mt-0 mb-10 break-words ml-0 list-none pl-0 uppercase text-sm">
      <li class="bg-gray-200 p-0 font-exo font-sans">
        <%= link_to search_index_path(search: params[:search]), remote: true, class: "px-8 py-2 no-underline #{ params[:only_fictions].present? || params[:only_publications].present? || params[:only_videos].present? ? 'text-gray-500 bg-gray-200' : 'text-white bg-rose-500' } w-full float-left rounded-xl mb-1 hover:bg-rose-500 hover:text-white" do %>
          <%= tag.span 'Все', class: 'font-bold' %>
        <% end %>
      </li>
      <%= tag.li class: 'bg-gray-200 p-0 mb-3 font-exo font-sans' do %>
        <%= link_to search_index_path(search: params[:search], only_publications: true), remote: true, class: "px-8 py-2 no-underline #{ params[:only_publications].present? ? 'text-white bg-rose-500' : 'text-gray-500 bg-gray-200' } w-full float-left rounded-xl mb-1 hover:bg-rose-500 hover:text-white" do %>
          <%= tag.span 'Блоги', class: 'font-bold float-left' %>
          <span class="font-bold float-right mr-2 flex align-center">
            <%= tag.span results.size, class: 'ml-1 inline-block' %>
          </span>
        <% end %>
      <% end %>
      <li class="bg-gray-200 p-0 mb-3 font-exo font-sans">
        <%= link_to search_index_path(search: params[:search], only_fictions: true), remote: true, class: "px-8 py-2 no-underline #{ params[:only_fictions].present? ? 'text-white bg-rose-500' : 'text-gray-500 bg-gray-200' } w-full float-left rounded-xl mb-1 hover:bg-rose-500 hover:text-white" do %>
          <%= tag.span 'Твори', class: 'font-bold float-left ' %>
          <span class="font-bold float-right mr-2 flex align-center">
            <%= tag.span fictions.size, class: 'ml-1 inline-block' %>
          </span>
        <% end %>
      </li>
      <li class="bg-gray-200 p-0 mb-3 font-exo font-sans">
        <%= link_to search_index_path(search: params[:search], only_videos: true), remote: true, class: "px-8 py-2 no-underline #{ params[:only_videos].present? ? 'text-white bg-rose-500' : 'text-gray-500 bg-gray-200' } w-full float-left rounded-xl mb-1 hover:bg-rose-500 hover:text-white" do %>
          <%= tag.span 'Відео', class: 'font-bold float-left ' %>
          <span class="font-bold float-right mr-2 flex align-center">
            <%= tag.span videos.size, class: 'ml-1 inline-block' %>
          </span>
        <% end %>
      </li>
    </ul>
  </div>
</div>
