<div>
  <div class="flex justify-between items-center mt-6">
    <%= render 'shared/divider_shiny_pink', caption: 'Ранобе' %>
  </div>
  <div class="py-2 px-2 mx-auto max-w-screen-xl lg:py-4 lg:px-6 font-oswald">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4">
      <% fictions.each do |fiction| %>
        <div class="relative overflow-hidden rounded-lg group">
          <%= link_to fiction_path(fiction) do %>
            <%= image_tag url_for(fiction.cover), alt: fiction.cover.blob.filename, class: 'object-cover w-full h-[320px] lg:h-full scale-100 ease-in duration-300 group-hover:scale-125' %>
            <div class="absolute inset-0 grid items-end justify-center p-4 bg-gradient-to-b from-transparent to-black/60">
              <div class="text-center">
                <%= tag.p fiction.title, class: 'text-xl font-bold text-white' %>
                <%= tag.p fiction.scanlators.pluck(:title).to_sentence, class: 'text-base font-medium text-gray-300' %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
