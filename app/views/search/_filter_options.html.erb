<ul class="space-y-2 mt-0 break-words ml-0 list-none pl-0 uppercase text-sm w-4/5 lg:w-full">
  <li class="bg-gray-200 p-0 font-exo font-sans">
    <%= turbo_frame_tag 'search-filters-all' do %>
      <%= simple_form_for search_index_path, method: :get, data: { turbo_stream: "" } do |f| %>
        <%= hidden_field_tag :search, params[:search] %>
        <%= f.submit 'ВСЕ', class: "px-8 py-2 no-underline #{ params[:only_fictions].present? || params[:only_publications].present? || params[:only_videos].present? ? 'text-gray-500 bg-gray-200' : 'text-white bg-rose-500' } w-full float-left rounded-xl mb-1 hover:bg-rose-500 hover:text-white font-bold hover:cursor-pointer transition duration-500 transform hover:scale-110" %>
      <% end %>
    <% end %>
  </li>

  <%= tag.li class: 'bg-gray-200 p-0 mb-3 font-exo font-sans' do %>
    <%= turbo_frame_tag 'search-filters-blogs' do %>
      <%= simple_form_for search_index_path, method: :get, data: { turbo_stream: "" } do |f| %>
        <%= hidden_field_tag :search, params[:search] %>
        <%= hidden_field_tag :only_publications, true %>
        <%= f.submit "БЛОГИ (#{results.size})", class: "px-8 py-2 no-underline #{ params[:only_publications].present? ? 'text-white bg-rose-500' : 'text-gray-500 bg-gray-200' } w-full float-left rounded-xl mb-1 hover:bg-rose-500 hover:text-white font-bold hover:cursor-pointer transition duration-500 transform hover:scale-110" %>
      <% end %>
    <% end %>
  <% end if results.any? %>

  <%= tag.li class: 'bg-gray-200 p-0 mb-3 font-exo font-sans' do %>
    <%= turbo_frame_tag 'search-filters-fictions' do %>
      <%= simple_form_for search_index_path, method: :get, data: { turbo_stream: "" } do |f| %>
        <%= hidden_field_tag :search, params[:search] %>
        <%= hidden_field_tag :only_fictions, true %>
        <%= f.submit "ТВОРИ (#{fictions.size})", class: "px-8 py-2 no-underline #{ params[:only_fictions].present? ? 'text-white bg-rose-500' : 'text-gray-500 bg-gray-200' } w-full float-left rounded-xl mb-1 hover:bg-rose-500 hover:text-white font-bold hover:cursor-pointer transition duration-500 transform hover:scale-110" %>
      <% end %>
    <% end %>
  <% end if fictions.any? %>

  <%= tag.li class: 'bg-gray-200 p-0 mb-3 font-exo font-sans' do %>
    <%= turbo_frame_tag 'search-filters-videos' do %>
      <%= simple_form_for search_index_path, method: :get, data: { turbo_stream: "" } do |f| %>
        <%= hidden_field_tag :search, params[:search] %>
        <%= hidden_field_tag :only_videos, true %>
        <%= f.submit "ВІДЕО (#{videos.size})", class: "px-8 py-2 no-underline #{ params[:only_videos].present? ? 'text-white bg-rose-500' : 'text-gray-500 bg-gray-200' } w-full float-left rounded-xl mb-1 hover:bg-rose-500 hover:text-white font-bold hover:cursor-pointer transition duration-500 transform hover:scale-110" %>
      <% end %>
    <% end %>
  <% end if videos.any? %>

</ul>