<!DOCTYPE html>
<html lang="uk">
  <head>
    <%= render 'shared/meta' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= favicon_link_tag asset_path('favicon.ico') %>

    <% if Rails.env.production? %>
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-BW05CDN8VS"></script>
      <%= javascript_include_tag 'ga' %>
      <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5596031369567303" crossorigin="anonymous"></script>
    <% end %>

    <% if requires_tinymce? %>
      <%= tinymce_assets %>
      <%= javascript_include_tag 'tinymce_initializer' %>
    <% end %>
  </head>

  <body class="min-w-[375px] lg:min-w-[1200px] relative flex flex-col min-h-screen">
    <div class="relative bg-no-repeat bg-cover bg-center bg-fixed" style="background-image: url(<%= asset_path('bg.webp') %>);">
      <div class="absolute inset-0 bg-white opacity-95"></div>
      <%= image_tag 'bg.webp', alt: 'bg image', class: 'hidden' %>
      <%= render 'shared/ads', advertisement: @advertisement if @advertisement&.persisted? %>
      <%= render "shared/navbar" %>
      <%= render "shared/notice" if notice %>
      <%= render "shared/alert" if alert %>
      <%= render 'hero_section' if current_page?(root_path) %>
      <main>
        <%= yield %>
      </main>
    </div>
    <%= render "shared/footer" %>
  </body>
</html>
