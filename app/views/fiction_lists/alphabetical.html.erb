<div class="z-10 relative font-oswald">
  <div id="bottom-banner" tabindex="-1" class="fixed bottom-0 start-0 z-50 flex justify-between w-full p-4 border-t border-gray-200 bg-gray-50 bg-no-repeat bg-cover bg-center bg-fixed bg-gray-500 bg-blend-multiply font-oswald" style="background-image: url(<%= asset_path('writer.webp') %>);">
    <div class="absolute inset-0 bg-white opacity-95"></div>
    <div class="hidden lg:flex items-center mx-auto z-10 relative tracking-tight font-extrabold my-4 text-4xl text-gray-900 flex justify-center items-center uppercase leading-5">
      Покажчик <span class="text-emerald-600 ml-2">Творів</span>
    </div>
    <div class="flex items-center mx-auto z-10 relative">
      <p class="flex items-center text-sm font-normal text-gray-500">
        <div class="flex justify-center">
          <div class="flex flex-row">
            <% @fiction_hash_sorted.keys.each do |letter, _fictions| %>
              <%= button_tag letter, onclick: "location.href='#letter-#{letter}'", class: 'mr-2 text-xs sm:text-xl font-light text-gray-500 hover:text-gray-900 transform transition duration-500 hover:scale-125' %>
            <% end %>
          </div>
        </div>
      </p>
    </div>
  </div>
  <div class="bg-gray-50 shadow-lg pb-4 lg:pb-0 rounded-lg relative bg-no-repeat bg-cover bg-center bg-fixed" style="background-image: url(<%= asset_path('writer.webp') %>);">
    <div class="col-span-5 md:block flex flex-col items-center justify-center h-full">
      <div class="absolute inset-0 bg-white opacity-95"></div>
      <div class="mx-auto w-auto md:w-[95%] flex relative z-10">
        <div class="pb-8 px-4 mx-auto max-w-screen-xl lg:px-6">
          <div class="my-4">
            <%= render 'shared/ads', advertisement: @advertisement %>
          </div>
          <ol class="relative sm:border-s sm:border-gray-200 mt-8">
            <% @fiction_hash_sorted.each do |letter, fictions| %>
              <%= render 'letter_section', letter:, fictions: %>
            <% end %>
          </ol>
        </div>
      </div>
    </div>
  </div>
</section>
