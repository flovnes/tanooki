<section class="py-8 antialiased z-10 relative">
  <div class="mx-auto max-w-screen-xl px-4 2xl:px-0">
    <div id="user-content"></div>
    <!-- TOP BAR -->
    <div class="mb-4 divide-y divide-gray-200 rounded-lg border border-gray-200 bg-white p-4 shadow-sm dark:divide-gray-700 dark:border-gray-700 dark:bg-gray-800 md:p-6">
      <div class="items-center justify-between md:flex">
        <h2 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white md:mb-0">Покажчик Творів <span class="ms-2 text-lg font-medium text-gray-500 dark:text-gray-400"><%= @pagy.count %> твори</span></h2>
      </div>
    </div>
    <div class="my-4">
      <%= render 'shared/ads', advertisement: @advertisement %>
    </div>
    <%= turbo_frame_tag 'fiction-list-page' do %>
      <%= render 'dynamic_content', fictions: @fictions, pagy: @pagy %>
    <% end %>
  </div>
</section>
