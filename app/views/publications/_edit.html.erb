<section class="h-full gradient-form bg-white py-8 lg:py-16 xl:py-32 z-10">
  <div class="md:container md:shadow-lg mx-auto max-w-7xl pl-4 grid-cols-12 relative">
    <div class="mt-3">
      <%= render 'blogs/status_alert', status: publication.status, message: publication.status_message if controller_path == 'blogs' %>
    </div>
    <div class="container py-2 px-10 mx-0 min-w-full flex flex-col items-center">
      <%= tag.p static_variables[:publication_edit_header], class: 'text-lg text-gray-800 font-semibold' %>
    </div>

    <%= simple_form_for publication, as: :publication, url: publication_path(publication), method: :put, html: { class: "form" } do |f| %>
      <%= render 'publications/form', publication: publication, f: f %>
    <% end %>
  </div>
</section>
