<header class="w-full relative mb-4 block">
  <%= tag.h1 publication.title, class: "text-gray-800 font-bold tracking-tight font-oswald w-full mr-0 text-4xl" %>
  <div class="mt-3 flex flex-col lg:flex-row justify-between lg:items-center">
    <div class="flex items-center space-x-3 text-gray-500 text-sm mb-2 lg:mb-0">
      <span>
        <%= image_tag url_for(publication.user.avatar.image), alt: publication.user.avatar.blob.filename.to_s, class: 'h-12 rounded-full' %>
      </span>
      <span>
        <%= tag.span "Опубліковано: #{time_ago_in_words(publication.created_at)} тому", class: 'text-gray-500 float-left' %>
        <%= tag.div publication.user.name, class: 'text-gray-800 font-bold' %>
      </span>
    </div>
    <aside aria-label="views">
      <div class="not-format">
        <span class="text-gray-500 text-xs flex align-center">
          <%= image_tag 'eye.svg', class: 'h-4 inline-block', alt: 'views' %>
          <%= tag.span publication.views, class: 'ml-1 inline-block' %>
        </span>
      </div>
    </aside>
  </div>
</header>