<section class="bg-white z-10 relative ">
  <div class="py-8 px-4 sm:px-6 md:px-12 lg:px-24 mx-auto lg:py-8" data-controller="dropzone">
    <h2 class="mb-4 text-xl font-semibold leading-none text-gray-900">Оновити Покемона</h2>
    <%= simple_form_for @pokemon, as: :pokemon, url: admin_pokemon_path(@pokemon), method: :put, html: { class: "form" } do |f| %>
      <%= render 'form', pokemon: @pokemon, types: @types, f: f %>
    <% end %>
  </div>
</section>
