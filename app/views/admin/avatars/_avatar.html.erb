<%= tag.div id: "avatar-#{avatar.id}", class: 'w-full' do %>
  <div class="flex justify-end px-4">
    <%= link_to admin_avatar_path(avatar),
                data: { turbo_confirm: 'Певні, що прагнете видалити цей аватар?', "turbo-method": :delete } do %>
      <svg fill="none" stroke="currentColor" class="cursor-pointer w-7 h-7 text-gray-500 hover:text-red-700 text-center" stroke-width="1.5" viewBox="0 0 22 22" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    <% end %>
  </div>
  <div class="flex flex-col items-center pb-3">
    <%= image_tag url_for(avatar.image), alt: avatar.image.blob.filename.to_s, class: "w-28 h-28 rounded-full mx-auto block shadow-lg mb-3" %>
  </div>
<% end %>
